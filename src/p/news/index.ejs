<% function formatHtml(str) { return str.replace(/\\/g,""); } %>
<% var isHasAcl = data.isHasAcl %>
<% data.list.forEach( function(item, index) {%>
	<li class="item clearfix <%= item.isFirst && 'first' %>">
		<% var link = isHasAcl && item.content_url ? ('./news-detail.html?ajaxUrl=' + encodeURIComponent(item.content_url)) : 'javascript:void(0);' %>
		<% var showContent = isHasAcl && item.title ? item.title : formatHtml(item.content) %>
		<a href="<%= link %>">
			<p class="time ui set-ui"> <%= item.time.split(' ')[1] %> </p>
			<div class="clearfix">
				<div class="left"> <%= showContent %> </div>
				<div class="right"></div>
				<div class="progress ui common">
					<span class="circle iconfont icon-icon-bar-chart-o"></span>
				</div>
			</div>
		</a>
	</li>
<% }); %>
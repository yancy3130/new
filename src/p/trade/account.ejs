<li>
    <% function getMount(num, unit) {unit = unit || 2;return parseFloat(num).toFixed(unit).toString().split('.')[1];} %>
    <p>
        <% if (data.profit.toString().indexOf('.999') != -1) {%> 
            <% if (data.profit > 0) { %>
                <%= parseInt(data.profit + 1) %>
            <% } else { %> 
                <%= parseInt(data.profit - 1) %>
            <% } %>
        <% } else { %>
            <%= parseInt(data.profit) %>
        <% } %>.<span class="small"><%= getMount(data.profit) %></span>
    </p>
    <p class="desc">浮动盈亏($)</p>
</li>
<li>
    <p><%= parseInt(data.margin) %>.<span class="small"><%= getMount(data.margin)%></span></p>
    <p class="desc">保证金($)</p>
</li>
<li>
    <p><%= parseInt(data.balance) %>.<span class="small"><%= getMount(data.balance) %></span></p>
    <p class="desc">账户余额($)</p>
</li>
<li> 
    <% var rate = data.margin == 0 ? '--' : (data.balance + data.profit)/data.margin * 100;%>
    <% var integer = rate == '--' ? '--' :  (parseInt(rate) === 0 ? (rate < 0 ? '-' + parseInt(rate) : parseInt(rate)) : parseInt(rate)); %>
    <p><%= integer %><% if (rate!=='--') {%>.<span class="small"><%= isNaN(parseInt(getMount(rate))) ? '--' : parseInt(getMount(rate)) %>%</span><%}%></p>
    <p class="desc">保证金比例($)</p>
</li>